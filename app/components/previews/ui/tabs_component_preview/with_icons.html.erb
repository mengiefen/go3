<div class="p-4 space-y-6">
  <h2 class="text-xl font-bold">Tabs with Icons</h2>
  
  <p class="text-gray-600">
    This example shows how to create tabs with both icons and text labels.
    Icons make tabs more visually distinctive and can help users identify them quickly.
  </p>
  
  <div class="border rounded overflow-hidden">
    <%= render Ui::TabsComponent.new(id: "icon-tabs", active_tab: "home-tab") do |tabs| %>
      <% # Tab Triggers with icons %>
      <% tabs.with_tab_trigger(
        id: "home-tab", 
        label: "Home", 
        icon: tag.svg(xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor", class: "h-4 w-4") do
          tag.path(stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6")
        end,
        active: true
      ) %>
      
      <% tabs.with_tab_trigger(
        id: "profile-tab", 
        label: "Profile", 
        icon: tag.svg(xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor", class: "h-4 w-4") do
          tag.path(stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z")
        end
      ) %>
      
      <% tabs.with_tab_trigger(
        id: "settings-tab", 
        label: "Settings", 
        icon: tag.svg(xmlns: "http://www.w3.org/2000/svg", fill: "none", viewBox: "0 0 24 24", stroke: "currentColor", class: "h-4 w-4") do
          tag.path(stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z")
          tag.path(stroke_linecap: "round", stroke_linejoin: "round", stroke_width: "2", d: "M15 12a3 3 0 11-6 0 3 3 0 016 0z")
        end
      ) %>
      
      <% # Tab Contents %>
      <% tabs.with_tab_content(id: "home-tab") do %>
        <div class="p-4 space-y-4">
          <h3 class="text-lg font-medium">Home Content</h3>
          <p>This tab shows the home dashboard content.</p>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-blue-50 p-4 rounded border border-blue-100">
              <h4 class="font-medium">Activity</h4>
              <p class="text-sm">Recent user activity will appear here.</p>
            </div>
            <div class="bg-green-50 p-4 rounded border border-green-100">
              <h4 class="font-medium">Statistics</h4>
              <p class="text-sm">Key metrics and statistics.</p>
            </div>
          </div>
        </div>
      <% end %>
      
      <% tabs.with_tab_content(id: "profile-tab") do %>
        <div class="p-4 space-y-4">
          <h3 class="text-lg font-medium">Profile Content</h3>
          <p>This tab contains user profile information.</p>
          <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded">
            <div class="bg-gray-200 rounded-full h-16 w-16 flex items-center justify-center">
              <span class="text-gray-600 text-xl font-bold">JD</span>
            </div>
            <div>
              <h4 class="font-medium">John Doe</h4>
              <p class="text-sm text-gray-600">john.doe@example.com</p>
              <p class="text-sm text-gray-500">Administrator</p>
            </div>
          </div>
        </div>
      <% end %>
      
      <% tabs.with_tab_content(id: "settings-tab") do %>
        <div class="p-4 space-y-4">
          <h3 class="text-lg font-medium">Settings Content</h3>
          <p>This tab contains application settings.</p>
          <div class="space-y-2">
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <span>Notifications</span>
              <button class="bg-blue-500 relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" role="switch" aria-checked="true">
                <span class="translate-x-5 pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
              </button>
            </div>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <span>Dark Mode</span>
              <button class="bg-gray-200 relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" role="switch" aria-checked="false">
                <span class="translate-x-0 pointer-events-none inline-block h-5 w-5 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
