<div class="space-y-8 p-4">
  <div>
    <h3 class="text-lg font-medium mb-3">Basic Select with Prompt</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "basic_select",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Please select an option"
      )) do |component| 
        component.with_label { "Select with prompt" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Select with Pre-selected Value</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "preselected_select",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        selected: 2
      )) do |component| 
        component.with_label { "Select with pre-selected value" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Select with Grouped Options</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "grouped_select",
        options: [
          ["Group 1", [["Option 1-1", "1-1"], ["Option 1-2", "1-2"]]],
          ["Group 2", [["Option 2-1", "2-1"], ["Option 2-2", "2-2"]]]
        ]
      )) do |component| 
        component.with_label { "Select with grouped options" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Custom Styled Select</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "custom_select",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        classes: "bg-gray-50 border-indigo-300 text-indigo-900",
        container_classes: "bg-gray-50 p-4 rounded-lg"
      )) do |component| 
        component.with_label { "Custom styled select" }
      end %>
    </div>
  </div>
</div>
