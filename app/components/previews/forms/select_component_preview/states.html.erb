<div class="space-y-8 p-4">
  <div>
    <h3 class="text-lg font-medium mb-3">Default State</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "default_state",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option"
      )) do |component| 
        component.with_label { "Default select" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Required State</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "required_state",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        required: true
      )) do |component| 
        component.with_label { "Required select" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Disabled State</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "disabled_state",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        disabled: true
      )) do |component| 
        component.with_label { "Disabled select" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Error State</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "error_state",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        error_state: true
      )) do |component| 
        component.with_label { "Select with error" }
        component.with_error { "This field is required" }
      end %>
    </div>
  </div>
</div>
