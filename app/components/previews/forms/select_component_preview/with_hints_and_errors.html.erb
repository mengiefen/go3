<div class="space-y-8 p-4">
  <div>
    <h3 class="text-lg font-medium mb-3">Select with Hint</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "select_with_hint",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option"
      )) do |component| 
        component.with_label { "Select with hint text" }
        component.with_hint { "This is a helpful hint about how to use this field" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Select with Error</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "select_with_error",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        error_state: true
      )) do |component| 
        component.with_label { "Select with error message" }
        component.with_error { "Please select a valid option" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Required Select with Hint</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "required_with_hint",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        required: true
      )) do |component| 
        component.with_label { "Required select with hint" }
        component.with_hint { "This field cannot be left empty" }
      end %>
    </div>
  </div>
  <div>
    <h3 class="text-lg font-medium mb-3">Select with Both Hint and Error</h3>
    <div class="max-w-md">
      <%= render(Forms::SelectComponent.new(
        name: "hint_and_error",
        options: [["Option 1", 1], ["Option 2", 2], ["Option 3", 3]],
        prompt: "Select an option",
        error_state: true
      )) do |component| 
        component.with_label { "Select with hint and error" }
        component.with_hint { "This hint won't show when there's an error" }
        component.with_error { "This error message takes precedence over the hint" }
      end %>
    </div>
  </div>
</div>
