<header class="bg-white shadow <%= classes %>">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex h-16 justify-between items-center">
      <div class="flex items-center space-x-4">
        <%# Logo Slot %>
        <% if logo %>
          <div class="flex-shrink-0">
            <%= logo %>
          </div>
        <% end %>
        <%# Search Slot %>
        <% if search %>
          <div class="hidden md:block md:ml-6">
            <%= search %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center space-x-4">
        <%# Notification Dropdown Slot %>
        <% if notification %>
          <div class="relative">
            <%= notification %>
          </div>
        <% end %>
        <%# Profile Popover Slot %>
        <% if profile %>
          <div class="relative">
            <%= profile %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
