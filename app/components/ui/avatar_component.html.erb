<div class="<%= container_classes %>" <%= @attrs.map { |k, v| "#{k}=\"#{v}\"" }.join(" ") %>>
  <% if @src %>
    <img src="<%= @src %>" alt="<%= @alt %>" class="w-full h-full object-cover <%= @shape == :circle ? 'rounded-full' : 'rounded-md' %>">
  <% elsif @icon %>
    <div class="<%= @color %> w-full h-full flex items-center justify-center <%= @shape == :circle ? 'rounded-full' : 'rounded-md' %>">
      <%= @icon %>
    </div>
  <% elsif @initials %>
    <div class="<%= @color %> w-full h-full flex items-center justify-center font-medium <%= @shape == :circle ? 'rounded-full' : 'rounded-md' %>">
      <%= @initials %>
    </div>
  <% else %>
    <div class="<%= @color %> w-full h-full flex items-center justify-center <%= @shape == :circle ? 'rounded-full' : 'rounded-md' %>">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-1/2 w-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>
  <% end %>

  <% if @status %>
    <span class="<%= status_position %> <%= status_dot_size %> <%= status_classes %> block rounded-full ring-2 ring-white"></span>
  <% end %>
</div>
