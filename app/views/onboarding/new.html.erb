<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <%= image_tag "logo.png", class: "mx-auto h-36 w-auto", alt: "GO3 Logo" %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <%= t('onboarding.title') %>
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      <%= t('onboarding.subtitle') %>
    </p>
  </div>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(model: @organization, local: true, class: "space-y-6") do |f| %>
        <div>
          <%= f.label :name, t('onboarding.organization_name_label'), class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :name, 
                class: "appearance-none w-100 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                placeholder: t('onboarding.organization_name_placeholder') %>
          </div>
          <p class="mt-2 text-sm text-gray-500 mb-8">
            <%= t('onboarding.description') %>
          </p>

            <%= button_to t('onboarding.submit_button'),
                organizations_path(organization: { name: @organization.name, is_trial: true }),
                method: :post,
                class: "w-full flex justify-center py-2 px-4 mb-4 cursor-pointer border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <%= button_to t('onboarding.random_name_button'),
                organizations_path(organization: { name: Faker::Company.name, is_trial: true }),
                method: :post,
                class: "w-full flex justify-center py-2 px-4 cursor-pointer border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 