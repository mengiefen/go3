<div class="max-w-4xl mx-auto">
  <!-- Organization Header -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mb-6">
    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-2xl font-bold text-slate-900 mb-2"><%= name %></h1>
        <div class="flex items-center space-x-4 text-sm text-slate-600">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Organization
          </div>
          <span>â€¢</span>
          <div>ID: <%= organization_id %></div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center space-x-2">
        <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        </button>
      </div>
    </div>
  </div>

  <!-- Organization Details -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Organization Info -->
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Organization Information</h2>
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-slate-500">Type</dt>
          <dd class="mt-1 text-sm text-slate-900">Enterprise</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Status</dt>
          <dd class="mt-1">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Created</dt>
          <dd class="mt-1 text-sm text-slate-900">March 15, 2024</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Industry</dt>
          <dd class="mt-1 text-sm text-slate-900">Technology</dd>
        </div>
      </dl>
    </div>

    <!-- Statistics -->
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Statistics</h2>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600">Total Members</span>
          <span class="text-lg font-semibold text-slate-900">156</span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600">Active Projects</span>
          <span class="text-lg font-semibold text-slate-900">23</span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600">Departments</span>
          <span class="text-lg font-semibold text-slate-900">8</span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm text-slate-600">Total Revenue</span>
          <span class="text-lg font-semibold text-slate-900">$2.4M</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mt-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Activity</h2>
    <div class="space-y-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-slate-900">New project created: Website Redesign</p>
          <p class="text-xs text-slate-500 mt-1">2 hours ago</p>
        </div>
      </div>
      
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-slate-900">5 new members joined the organization</p>
          <p class="text-xs text-slate-500 mt-1">Yesterday</p>
        </div>
      </div>
    </div>
  </div>
</div>