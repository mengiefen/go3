<div class="max-w-4xl mx-auto">
  <!-- Security Header -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mb-6">
    <h1 class="text-2xl font-bold text-slate-900 mb-2"><%= name %></h1>
    <p class="text-sm text-slate-600">Manage security settings and access controls for your application</p>
  </div>

  <!-- Security Overview -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
        </svg>
        <span class="text-sm font-medium text-green-700">Secure</span>
      </div>
      <p class="text-2xl font-bold text-green-900">98%</p>
      <p class="text-sm text-green-700">Security Score</p>
    </div>
    
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        <span class="text-sm font-medium text-blue-700">Enabled</span>
      </div>
      <p class="text-2xl font-bold text-blue-900">2FA</p>
      <p class="text-sm text-blue-700">Two-Factor Auth</p>
    </div>
    
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
      <div class="flex items-center justify-between mb-2">
        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <span class="text-sm font-medium text-purple-700">Active</span>
      </div>
      <p class="text-2xl font-bold text-purple-900">24</p>
      <p class="text-sm text-purple-700">Audit Logs</p>
    </div>
  </div>

  <!-- Access Control -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Access Control</h2>
    <div class="space-y-4">
      <div class="border-b border-slate-200 pb-4">
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900">Active Sessions</h3>
          <button class="text-sm text-red-600 hover:text-red-700">Revoke All</button>
        </div>
        <div class="space-y-2">
          <div class="flex items-center justify-between text-sm">
            <div>
              <p class="font-medium text-slate-900">Chrome on MacOS</p>
              <p class="text-slate-600">192.168.1.100 • Current session</p>
            </div>
            <span class="text-xs text-green-600">Active now</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <div>
              <p class="font-medium text-slate-900">Mobile App on iOS</p>
              <p class="text-slate-600">192.168.1.101 • Last active 2 hours ago</p>
            </div>
            <button class="text-xs text-red-600 hover:text-red-700">Revoke</button>
          </div>
        </div>
      </div>
      
      <div>
        <h3 class="font-medium text-slate-900 mb-3">API Keys</h3>
        <div class="space-y-2">
          <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
            <div>
              <p class="font-medium text-sm text-slate-900">Production API Key</p>
              <p class="text-xs text-slate-600">sk_live_...4a8b • Created Jan 15, 2025</p>
            </div>
            <button class="text-sm text-red-600 hover:text-red-700">Delete</button>
          </div>
          <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg">
            <div>
              <p class="font-medium text-sm text-slate-900">Development API Key</p>
              <p class="text-xs text-slate-600">sk_test_...9c2d • Created Dec 1, 2024</p>
            </div>
            <button class="text-sm text-red-600 hover:text-red-700">Delete</button>
          </div>
        </div>
        <button class="mt-3 px-4 py-2 bg-blue-600 text-white text-sm rounded-lg hover:bg-blue-700 transition-colors">
          Generate New API Key
        </button>
      </div>
    </div>
  </div>

  <!-- Recent Audit Logs -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Audit Logs</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-slate-200">
            <th class="text-left py-2 px-4 font-medium text-slate-700">Action</th>
            <th class="text-left py-2 px-4 font-medium text-slate-700">User</th>
            <th class="text-left py-2 px-4 font-medium text-slate-700">IP Address</th>
            <th class="text-left py-2 px-4 font-medium text-slate-700">Time</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-b border-slate-100">
            <td class="py-2 px-4">Login successful</td>
            <td class="py-2 px-4">admin@example.com</td>
            <td class="py-2 px-4">192.168.1.100</td>
            <td class="py-2 px-4 text-slate-600">5 minutes ago</td>
          </tr>
          <tr class="border-b border-slate-100">
            <td class="py-2 px-4">Settings updated</td>
            <td class="py-2 px-4">user@example.com</td>
            <td class="py-2 px-4">192.168.1.101</td>
            <td class="py-2 px-4 text-slate-600">1 hour ago</td>
          </tr>
          <tr class="border-b border-slate-100">
            <td class="py-2 px-4">Password changed</td>
            <td class="py-2 px-4">admin@example.com</td>
            <td class="py-2 px-4">192.168.1.100</td>
            <td class="py-2 px-4 text-slate-600">3 hours ago</td>
          </tr>
          <tr class="border-b border-slate-100">
            <td class="py-2 px-4">2FA enabled</td>
            <td class="py-2 px-4">user@example.com</td>
            <td class="py-2 px-4">192.168.1.102</td>
            <td class="py-2 px-4 text-slate-600">Yesterday</td>
          </tr>
        </tbody>
      </table>
    </div>
    <button class="mt-4 text-sm text-blue-600 hover:text-blue-700">View All Logs →</button>
  </div>
</div>