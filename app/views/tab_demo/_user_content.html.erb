<div class="max-w-4xl mx-auto">
  <!-- User Header -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex items-center">
        <!-- Avatar -->
        <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mr-4">
          <%= name.split.map(&:first).join.upcase %>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-slate-900"><%= name %></h1>
          <div class="flex items-center space-x-4 text-sm text-slate-600 mt-1">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              <%= user_type.capitalize %>
            </div>
            <span>â€¢</span>
            <div>ID: <%= user_id %></div>
          </div>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center space-x-2">
        <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Profile
        </button>
        
        <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-slate-700 bg-slate-50 rounded-lg hover:bg-slate-100 transition-colors">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          Send Message
        </button>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- User Information -->
    <div class="md:col-span-2 bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">User Information</h2>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-slate-500">Email</dt>
          <dd class="mt-1 text-sm text-slate-900"><%= name.downcase.gsub(' ', '.') %>@example.com</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Phone</dt>
          <dd class="mt-1 text-sm text-slate-900">+1 (555) 123-4567</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Department</dt>
          <dd class="mt-1 text-sm text-slate-900">Engineering</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Location</dt>
          <dd class="mt-1 text-sm text-slate-900">San Francisco, CA</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Joined</dt>
          <dd class="mt-1 text-sm text-slate-900">January 15, 2023</dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-slate-500">Status</dt>
          <dd class="mt-1">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Permissions -->
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Permissions</h2>
      <ul class="space-y-2">
        <% if user_type == 'admin' %>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Full Admin Access
          </li>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            User Management
          </li>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            System Settings
          </li>
        <% else %>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            View Projects
          </li>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Create Tasks
          </li>
          <li class="flex items-center text-sm">
            <svg class="w-4 h-4 text-slate-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
            Delete Resources
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mt-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Activity</h2>
    <div class="space-y-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-slate-900">Completed task: Update user documentation</p>
          <p class="text-xs text-slate-500 mt-1">1 hour ago</p>
        </div>
      </div>
      
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <p class="text-sm text-slate-900">Commented on: Q4 Marketing Strategy</p>
          <p class="text-xs text-slate-500 mt-1">3 hours ago</p>
        </div>
      </div>
    </div>
  </div>
</div>