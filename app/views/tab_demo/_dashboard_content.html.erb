<div class="max-w-6xl mx-auto">
  <!-- Dashboard Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-900"><%= name %></h1>
    <p class="text-sm text-slate-600 mt-1">Real-time overview of key metrics and performance indicators</p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded">+15%</span>
      </div>
      <p class="text-2xl font-bold text-slate-900">$542,831</p>
      <p class="text-sm text-slate-600">Total Revenue</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded">+23%</span>
      </div>
      <p class="text-2xl font-bold text-slate-900">12,834</p>
      <p class="text-sm text-slate-600">Active Users</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
          </svg>
        </div>
        <span class="text-xs text-purple-600 bg-purple-100 px-2 py-1 rounded">342</span>
      </div>
      <p class="text-2xl font-bold text-slate-900">1,243</p>
      <p class="text-sm text-slate-600">Active Tasks</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-4">
      <div class="flex items-center justify-between mb-2">
        <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <span class="text-xs text-red-600 bg-red-100 px-2 py-1 rounded">-3%</span>
      </div>
      <p class="text-2xl font-bold text-slate-900">89.3%</p>
      <p class="text-sm text-slate-600">Server Uptime</p>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Activity Feed -->
    <div class="lg:col-span-2 bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Activity</h2>
      <div class="space-y-4">
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-xs font-medium text-blue-600">JD</span>
          </div>
          <div class="flex-1">
            <p class="text-sm text-slate-900">John Doe completed task <span class="font-medium">"Update user dashboard"</span></p>
            <p class="text-xs text-slate-500 mt-1">2 minutes ago</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-xs font-medium text-green-600">SM</span>
          </div>
          <div class="flex-1">
            <p class="text-sm text-slate-900">Sarah Miller created new campaign <span class="font-medium">"Spring Sale 2025"</span></p>
            <p class="text-xs text-slate-500 mt-1">15 minutes ago</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-xs font-medium text-purple-600">TC</span>
          </div>
          <div class="flex-1">
            <p class="text-sm text-slate-900">Tom Chen updated organization settings</p>
            <p class="text-xs text-slate-500 mt-1">1 hour ago</p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-xs font-medium text-orange-600">AB</span>
          </div>
          <div class="flex-1">
            <p class="text-sm text-slate-900">Alice Brown generated monthly report</p>
            <p class="text-xs text-slate-500 mt-1">2 hours ago</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h2>
      <div class="space-y-3">
        <button class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
          Create New Task
        </button>
        <button class="w-full px-4 py-2 bg-white border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors text-sm font-medium">
          Generate Report
        </button>
        <button class="w-full px-4 py-2 bg-white border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors text-sm font-medium">
          Invite Team Member
        </button>
        <button class="w-full px-4 py-2 bg-white border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors text-sm font-medium">
          View Analytics
        </button>
      </div>
    </div>
  </div>

  <!-- Performance Chart -->
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 mt-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Performance Trends</h2>
    <div class="h-64 bg-slate-50 rounded-lg flex items-center justify-center">
      <p class="text-slate-500">Performance chart visualization would appear here</p>
    </div>
  </div>
</div>