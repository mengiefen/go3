<%= render(Ui::SearchComponent.new(placeholder: "Example with search results...")) do |search| %>
  <% 
  # Adding example search results
  5.times do |i|
    search.result do %>
      <li class="relative flex items-center py-2 px-3 hover:bg-gray-50 rounded-md cursor-pointer dark:hover:bg-gray-800">
        <div class="flex-shrink-0 flex items-center justify-center w-8 h-8 bg-indigo-100 rounded-md text-indigo-600 dark:bg-indigo-900 dark:text-indigo-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
          </svg>
        </div>
        <div class="ml-4 flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
            Example search result <%= i + 1 %>
          </p>
          <p class="text-xs text-gray-500 truncate dark:text-gray-400">
            Last modified on <%= (Date.today - i).strftime("%b %d, %Y") %>
          </p>
        </div>
        <div class="ml-2 flex-shrink-0 flex space-x-1 text-gray-400">
          <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            Document
          </span>
        </div>
      </li>
    <% end
  end %>
<% end %>
