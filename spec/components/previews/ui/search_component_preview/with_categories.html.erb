<%= render(Ui::SearchComponent.new(placeholder: "Search across categories...")) do |search| %>
  <% 
  # Adding example categories with search results
  categories = [
    { name: "Documents", icon: "document-text", count: 3 },
    { name: "Projects", icon: "briefcase", count: 2 },
    { name: "Team Members", icon: "user-group", count: 2 }
  ]
  
  categories.each do |category|
    search.category do %>
      <div>
        <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider px-3 mb-2 dark:text-gray-400">
          <%= category[:name] %> (<%= category[:count] %>)
        </h3>
        <ul class="divide-y divide-gray-200 dark:divide-gray-700">
          <% category[:count].times do |i| %>
            <li class="relative flex items-center py-2 px-3 hover:bg-gray-50 rounded-md cursor-pointer dark:hover:bg-gray-800">
              <div class="flex-shrink-0 flex items-center justify-center w-8 h-8 bg-indigo-100 rounded-md text-indigo-600 dark:bg-indigo-900 dark:text-indigo-300">
                <% if category[:icon] == "document-text" %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                  </svg>
                <% elsif category[:icon] == "briefcase" %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z" />
                  </svg>
                <% elsif category[:icon] == "user-group" %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
                  </svg>
                <% end %>
              </div>
              <div class="ml-4 flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                  <%= category[:name] %> Item <%= i + 1 %>
                </p>
                <p class="text-xs text-gray-500 truncate dark:text-gray-400">
                  Last updated <%= rand(1..30) %> days ago
                </p>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end
  end %>
<% end %>
